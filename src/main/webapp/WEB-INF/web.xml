<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" version="3.0">

<display-name>Archetype Created Web Application</display-name>

  <servlet>
    <servlet-name>Accueil</servlet-name>
    <servlet-class>servlets.Accueil</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Accueil</servlet-name>
    <url-pattern>/accueil</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>Topo</servlet-name>
    <servlet-class>servlets.Topo</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Topo</servlet-name>
    <url-pattern>/topo</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>Connect</servlet-name>
    <servlet-class>servlets.Connect</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Connect</servlet-name>
    <url-pattern>/connect</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>Filter</servlet-name>
    <servlet-class>servlets.Filter</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Filter</servlet-name>
    <url-pattern>/filter</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>CreateAccount</servlet-name>
    <servlet-class>servlets.CreateAccount</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>CreateAccount</servlet-name>
    <url-pattern>/createaccount</url-pattern>
  </servlet-mapping>

    <jsp-config>
        <jsp-property-group>
            <url-pattern>*.jsp</url-pattern>
            <include-prelude>/WEB-INF/taglibs.jsp</include-prelude>
        </jsp-property-group>

    </jsp-config>

  <!-- Filter Struts -->

  <filter>
    <filter-name>struts2</filter-name>
    <filter-class>org.apache.struts2.dispatcher.filter.StrutsPrepareAndExecuteFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>struts2</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>

</web-app>
